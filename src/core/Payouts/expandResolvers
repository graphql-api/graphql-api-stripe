const expand = {
  Payout: [
    balance_transaction,
    balance_transaction.source,
    destination,
    failure_balance_transaction,
    failure_balance_transaction.source
  ],
  PayoutList: [
    data.balance_transaction,
    data.balance_transaction.source,
    data.destination,
    data.failure_balance_transaction,
    data.failure_balance_transaction.source
  ]
};

const withExpand = typename => next => async (root, args, context, info) =>
  next(root, { ...args, expand: expand[typename] }, context, info);

export const expandResolvers = {
  "Query.retrievePayout": [withExpand("Payout")],
  "Query.listPayouts": [withExpand("PayoutList")],
  "Mutation.createPayout": [withExpand("Payout")],
  "Mutation.updatePayout": [withExpand("Payout")],
  "Mutation.cancelPayout": [withExpand("Payout")]
};
