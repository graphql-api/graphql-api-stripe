const expand = {
  BankAccount: [account, customer, customer.default_source],
  BankAccountList: [data.account, data.customer, data.customer.default_source],
  DeleteBankAccountPayload: []
};

const withExpand = typename => next => async (root, args, context, info) =>
  next(root, { ...args, expand: expand[typename] }, context, info);

export const expandResolvers = {
  "Query.retrieveBankAccount": [withExpand("BankAccount")],
  "Query.listBankAccounts": [withExpand("BankAccountList")],
  "Mutation.createBankAccount": [withExpand("BankAccount")],
  "Mutation.updateBankAccount": [withExpand("BankAccount")],
  "Mutation.deleteBankAccount": [withExpand("DeleteBankAccountPayload")],
  "Mutation.verifyBankAccount": [withExpand("BankAccount")]
};
